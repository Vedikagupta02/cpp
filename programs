Decimal to Binary 
#include<iostream>
#include <math.h>
using namespace std;

int main() {
	// Write your code here
	int N;
	cin>>N;
	long ans=0;
	long pv=1;
	

        while (N != 0) {
          int rem = N % 2;
        ans = ans + rem  * pv;
          pv = pv * 10;
          N = N / 2;
		  
        }
		cout<<ans;
}

OR 

#include<iostream>
#include <math.h>
using namespace std;



int main() {
    int n;
    cin >> n;

    if (n == 0) {
        cout << "0" << endl;
        return 0;
    }

    string binary = "";

    while (n > 0) {
        int bit = n & 1; // Extract the last bit
        binary = to_string(bit) + binary; // Append the bit to the left of the binary string
        n = n >> 1; // Right shift the number by 1 to process the next bit
    }

    cout << binary << endl;

    return 0;
}
